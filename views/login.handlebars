<div class="row">
  <div class="login">
    <h2 class="heading">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="text username-login">Username:</label>
        <input class="text form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="text password-login">Password:</label>
        <input class="text form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="signup">
    <h2 class="heading">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="text name-signup">Username:</label>
        <input class="text form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="text password-signup">Password:</label>
        <input class="text form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Up!</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>