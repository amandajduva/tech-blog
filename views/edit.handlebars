  <div class="posts">
    <h3 class="post-heading buffer">Edit Post:</h3>

    <form class="new-project-form post-body" >
      <div class="form-group">
        <label for="project-name" class="text">Post Title:</label>
        <input class="form-input text" type="text" id="project-name" name="project-name" value="{{post.title}}" />
      </div>
      <div class="form-group">
        <label for="project-desc" class="text">Content:</label>
        <textarea class="form-input text" id="project-desc" name="project-desc">{{post.description}}</textarea>
      </div>
      <div class="form-group">
        <button type="button" data_id="{{post.id}}" class="btn update-btn">Update</button>
        <button type="button" data_id="{{post.id}}" class="delete-btn">Delete</button>
      </div>
    </form>
  </div>

  <script src="/js/edit.js"></script>