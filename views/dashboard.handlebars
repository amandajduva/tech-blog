{{#each posts as |post| }}
<div class="posts">
  <div class="post-heading title">
    <h2 class="post-heading">
      <a href="/edit/{{post.id}}" class="post-heading">{{post.title}}</a>
    </h2>
    <p class="credit post-heading">Created on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}

<a href="/new" class="posts">
    <button class="btn">+ New Post</button>
</a>