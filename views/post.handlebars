<div class="posts">
  <h2 class="post-heading">{{title}}</h2>
  <div class="post-body">
    <p>{{description}}</p>
    <p class="buffer">-Created by {{user.username}} on {{format_date date_created}}</p>
  </div>

{{#if comments.length}}
  <div class="project-list">
    <h3 class="add-comment post-heading spacer">Comments:</h3>

    {{#each comments as |comment|}}
    <div class="post-body">
        <p>{{comment.comment_description}}</p>
        <p class="buffer">-Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <div class="add-comment">
    <h3 class="post-heading spacer">Comment:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-desc"></label>
        <textarea class="form-input comment-input" id="project-desc" name="project-desc"></textarea>
      </div>
        <input type="hidden" id="userId" name="userId" value="{{user.id}}">
        <input type="hidden" id="postId" name="postId" value="{{id}}">
      <div class="form-group">
        <button type="click" class="btn comment-btn">Submit</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/comment.js"></script>